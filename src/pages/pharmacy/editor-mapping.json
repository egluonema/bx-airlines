      {
        "type": "string",
        "friendlyName": "Title",
        "jsonPath": "settings.title",
        "elementSelector": "head > title"
      }, 
      {
        "type": "image",
        "friendlyName": "Favicon",
        "jsonPath": "settings.images.favicon",
        "elementSelector": "#favicon"
      },
      {
        "type": "image",
        "friendlyName": "Apple Touch Icon",
        "jsonPath": "settings.images.apple_touch_icon",
        "elementSelector": "#apple-touch-icon"
      },
      {
        "type": "image",
        "friendlyName": "Logo",
        "jsonPath": "settings.images.logo",
        "elementSelector": "#bxi-logo img"
      },
      {
        "type": "image",
        "friendlyName": "Dialog Logo",
        "jsonPath": "settings.images.dialog_logo",
        "elementSelector": "#dialog-logo"
      }
    ],
    "home": [
      {
        "type": "image",
        "friendlyName": "Banner Background Image",
        "jsonPath": "settings.home_page.banner.background_image",
