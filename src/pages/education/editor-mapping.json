  "content": {
    "global": [
      {
        "type": "string",
        "friendlyName": "Title",
        "jsonPath": "settings.title",
        "elementSelector": "head > title"
      }, 
      {
        "type": "image",
        "friendlyName": "Favicon",
        "jsonPath": "settings.images.favicon",
        "elementSelector": "#favicon"
      },
      {
        "type": "image",
        "friendlyName": "Apple Touch Icon",
        "jsonPath": "settings.images.apple_touch_icon",
        "elementSelector": "#apple-touch-icon"
      },
      {
        "type": "image",
        "friendlyName": "Logo",
        "jsonPath": "settings.images.logo",
        "elementSelector": "#bxi-logo img"
      },
      {
        "type": "image",
        "friendlyName": "Dialog Logo",
        "jsonPath": "settings.images.dialog_logo",
        "elementSelector": "#dialog-logo"
      },
      {
        "type": "string",
        "friendlyName": "Footer Phone Number",
        "jsonPath": "settings.footer.phone_number",
        "elementSelector": ".footer-phone-number"
      }
    ],
    "home": [
      {
        "type": "image",
        "friendlyName": "Banner Image",
        "jsonPath": "settings.home_page.banner.image",
        "elementSelector": "img.bxi-banner-image"
      },
      {
        "type": "string",
        "friendlyName": "Banner Title",
        "jsonPath": "settings.home_page.banner.title",
        "elementSelector": ".bxi-banner h1.bxi-main-header"
      },
      {
        "type": "string",
        "friendlyName": "Banner Title",
        "jsonPath": "settings.home_page.banner.subtitle",
        "elementSelector": ".bxi-banner h4"
      },
      {
        "type": "string",
        "friendlyName": "Programs Section Title",
        "jsonPath": "settings.home_page.programs_section.title",
        "elementSelector": ".bxi-program-sections h1.bxi-main-header"
      }
    ],
    "dashboard": [
      {
        "type": "string",
        "friendlyName": "Dashboard Header",
        "jsonPath": "settings.dashboard.portal.header",
        "elementSelector": ".bxi-education-portal h6:first-child"
      },
      {
        "type": "string",
        "friendlyName": "Dashboard Program Name",
        "jsonPath": "settings.dashboard.portal.program",
        "elementSelector": ".bxi-education-portal h1.bxi-main-header"
      },
      {
        "type": "string",
        "friendlyName": "Sidebar Title",
        "jsonPath": "settings.dashboard.sidebar.title",
        "elementSelector": ".bxi-sidebar h1.bxi-main-header"
      }
